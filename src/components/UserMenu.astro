---
import DropdownItem from "./DropdownItem.astro";

import dropdownItems from "../data/user-menu-dropdown-items.json";
---

<li class="dropdown">
  <a class="app-nav__item" href="javascript:" data-bs-toggle="dropdown">
    <i class="bi bi-person fs-4"></i>
  </a>
  <ul class="dropdown-menu settings-menu dropdown-menu-right">
    {
      dropdownItems.map(({ href, iconClasses, slot }) => (
        <DropdownItem href={href} iconClasses={iconClasses}>
          {slot}
        </DropdownItem>
      ))
    }
  </ul>
</li>
