---
import type { ComponentWithIcon } from '../types';
import Icon from './Icon.astro';

interface Props extends ComponentWithIcon {
  variant: "primary" | "info" | "warning" | "danger";
  counter: number;
}
---

<div class="col-md-6 col-lg-4">
  <div class:list={["widget-small", Astro.props.variant, "coloured-icon"]}>
    <Icon name={Astro.props.iconName} class="icon fs-1" />
    <div class="info">
      <h4>
        <slot />
      </h4>
      <p>
        <b>{Astro.props.counter}</b>
      </p>
    </div>
  </div>
</div>
