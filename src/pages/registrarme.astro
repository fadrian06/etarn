---
import Head from "@/components/Head.astro";
import Icon from "@/components/Icon.astro";
import Input from "@/components/Input.astro";
import Scripts from "@/components/Scripts.astro";
---

<!doctype html>
<html>
  <Head title="Registrarme" />
  <body>
    <section class="material-half-bg">
      <div class="cover"></div>
    </section>
    <section class="login-content">
      <div class="logo m-0">
        <h1>ETARN</h1>
      </div>
      <div class="login-box">
        <form class="login-form" method="post" action="./api/registrarme">
          <h4 class="login-head">
            <Icon name="person" class="me-2" />
            REGISTRARME
          </h4>
          <Input type="email" name="email" required>CORREO ELECTRÓNICO</Input>
          <Input type="password" name="password" required>CONTRASEÑA</Input>
          <div class="mb-3 btn-container d-grid">
            <button class="btn btn-primary btn-block">
              <Icon name="box-arrow-in-down-right" class="me-2 fs-5" />
              REGISTRARME
            </button>
          </div>
        </form>
      </div>
    </section>
    <Scripts />
    <script>
      import $ from "jquery";

      // Login Page Flipbox control
      $('.login-content [data-toggle="flip"]').on("click", () => {
        $(".login-box").toggleClass("flipped");

        return false;
      });
    </script>
  </body>
</html>

<style>
  body {
    overflow-y: scroll;
  }
</style>
