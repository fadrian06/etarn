---
import Head from "../components/Head.astro";
import Icon from "../components/Icon.astro";
import Input from "../components/Input.astro";
import Scripts from "../components/Scripts.astro";
---

<!doctype html>
<html>
  <Head title="Ingresar" />
  <body>
    <section class="material-half-bg">
      <div class="cover"></div>
    </section>
    <section class="login-content">
      <div class="logo m-0">
        <h1>ETARN</h1>
      </div>
      <div class="login-box">
        <form class="login-form" method="post">
          <h4 class="login-head">
            <Icon name="person" class="me-2" />
            INGRESAR
          </h4>
          <Input type="email" name="email">CORREO ELECTRÓNICO</Input>
          <Input type="password" name="password">CONTRASEÑA</Input>
          <div class="mb-3">
            <div class="utility">
              <p class="semibold-text mb-2">
                <a href="javascript:" data-toggle="flip">
                  ¿Olvidé mi contraseña?
                </a>
              </p>
            </div>
          </div>
          <div class="mb-3 btn-container d-grid">
            <button class="btn btn-primary btn-block">
              <Icon name="box-arrow-in-down-right" class="me-2 fs-5" />
              INGRESAR
            </button>
          </div>
        </form>
        <form
          class="forget-form"
          action="./restablecer-contraseña"
          method="post"
        >
          <h4 class="login-head">
            <Icon name="person-lock" class="me-2" />
            ¿Olvidé mi contraseña?
          </h4>
          <Input type="email" name="email">CORREO ELECTRÓNICO</Input>
          <div class="mb-3 btn-container d-grid">
            <button class="btn btn-primary btn-block">
              <Icon name="unlock" class="me-2 fs-5" />
              RESTABLECER
            </button>
          </div>
          <div class="mb-3 mt-3">
            <p class="semibold-text mb-0">
              <a href="javascript:" data-toggle="flip">
                <Icon name="chevron-left" class="me-1" />
                Volver al ingreso
              </a>
            </p>
          </div>
        </form>
      </div>
    </section>
    <Scripts />
    <script>
      import $ from "jquery";

      // Login Page Flipbox control
      $('.login-content [data-toggle="flip"]').on("click", () => {
        $(".login-box").toggleClass("flipped");

        return false;
      });
    </script>
  </body>
</html>

<style>
  body {
    overflow-y: scroll;
  }
</style>
