---
import Head from "../components/Head.astro";
import Input from "../components/Input.astro";
import Scripts from "../components/Scripts.astro";
---

<!doctype html>
<html>
  <Head title="Ingresar" />
  <body>
    <section class="material-half-bg">
      <div class="cover"></div>
    </section>
    <section class="login-content">
      <div class="logo m-0">
        <h1>ETARN</h1>
      </div>
      <div class="login-box">
        <form class="login-form" method="post">
          <h4 class="login-head">
            <i class="bi bi-person me-2"></i>
            INGRESAR
          </h4>
          <Input type="email" name="email">CORREO ELECTRÓNICO</Input>
          <Input type="password" name="password">CONTRASEÑA</Input>
          <div class="mb-3">
            <div class="utility">
              <p class="semibold-text mb-2">
                <a href="javascript:" data-toggle="flip"
                  >¿Olvidé mi contraseña?</a
                >
              </p>
            </div>
          </div>
          <div class="mb-3 btn-container d-grid">
            <button class="btn btn-primary btn-block">
              <i class="bi bi-box-arrow-in-right me-2 fs-5"></i>
              INGRESAR
            </button>
          </div>
        </form>
        <form
          class="forget-form"
          action="./restablecer-contraseña"
          method="post"
        >
          <h4 class="login-head">
            <i class="bi bi-person-lock me-2"></i>
            ¿Olvidé mi contraseña?
          </h4>
          <Input type="email" name="email">CORREO ELECTRÓNICO</Input>
          <div class="mb-3 btn-container d-grid">
            <button class="btn btn-primary btn-block">
              <i class="bi bi-unlock me-2 fs-5"></i>
              RESTABLECER
            </button>
          </div>
          <div class="mb-3 mt-3">
            <p class="semibold-text mb-0">
              <a href="javascript:" data-toggle="flip">
                <i class="bi bi-chevron-left me-1"></i>
                Volver al ingreso
              </a>
            </p>
          </div>
        </form>
      </div>
    </section>
    <Scripts />
    <script is:inline>
      // Login Page Flipbox control
      $('.login-content [data-toggle="flip"]').click(() => {
        $(".login-box").toggleClass("flipped");

        return false;
      });
    </script>
  </body>
</html>

<style>
  body {
    overflow-y: scroll;
  }
</style>
